<h2 class="text-center">Gallery</h2>

<% if (!images.length) { %>
  <h5 class="text-center">This route does not have any pictures yet.</h5>
<% } %>


<div class="imgs-container">
    <% images.forEach((image) => { %>
        <div class="img-item">
            <a href="<%-image.url%>">
                <img src="<%-image.url%>">
            </a>
        </div>
    <% }) %>
</div>


<% if (images.length) { %>
  <div class="place-container">
    <% if (pageNumber > 1) {%>
      <a class="btn btn-blue" href="<%- previousPagePath() %>">Previous</a>
    <% } %>

    <% if (images.length) { %>
      <a class="btn btn-blue" href="<%- nextPagePath() %>">Next</a>
    <% } %>
  </div>
<% } -%>

