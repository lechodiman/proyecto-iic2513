<div class="container">
	<h2><%- route.name %></h2>
	

	<div class="row">
		<div class="place-description">
			<div class="eight">
				<h3>Route's Description</h3>
				<p><%- route.description %></p>
			</div>		
		</div>
		</div>

	<% reviews.forEach(review => { %>
	  <div>
	    <p><%- review.comment.comment %> </p>
	    <p>Posted at <%- review.comment.createdAt %> by <%- review.sender.name %></p>
	  </div>

	<% }); %>

	<% if (currentUser) { %>
		<div>
			<%- include('_comment') %>
		</div>
		<div>
			<%- include('_add_route') %>
		</div>
	<% } %>
</div>
