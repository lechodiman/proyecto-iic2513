<div class="container">
	<h2><%- route.name %></h2>

	<% reviews.forEach(review => { %>
	  <div>
	    <p><%- review.comment %> </p>
	    <p>Posted at <%- review.createdAt %></p>
	  </div>

	<% }); %>

	<% if (currentUser) { %>
		<div>
			<%- include('_comment') %>
		</div>
		<div>
			<%- include('_add_route') %>
		</div>
	<% } %>
</div>
