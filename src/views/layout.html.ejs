<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Tochova</title>
  <% if (env !== 'development') { %>
    <link rel="stylesheet" href="/assets/styles.css">
    <% } %>
</head>

<body>
  <header>
    <div id="banner">
      <p><a href="/"> Home </a></p>
      <p><a href="/misc/faq"> FAQ </a></p>
      <p><a href="/misc/tips"> Tips </a></p>
      <% if (currentUser) { %>
        <p><a href="<%= profilePath(currentUser) %>"> <%- currentUser.name %> </a></p>
        <p><a href="<%= destroySessionPath %>"> Logout </a></p>
      <% } else { %>
        <p><a href="<%= newSessionPath %>"> Login </a></p>
      <% } %>
    </div>

  </header>
  <%- body %>
    <script src="/assets/app.js"></script>
    <script src="/assets/appReact.js"></script>
</body>

</html>
