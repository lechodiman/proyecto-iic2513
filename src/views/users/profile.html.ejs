<div class="user-profile-container">
	<div class="user-picture card">
		<% if (user.picture) { %>
			<img id='user-img' src=<%= user.picture %> />
		<% }%>

		<% if (currentUser && currentUser.id == user.id) { %>
			<div class="img-form">
				<%- include('_picture') %>
			</div>
		<% }%>

	</div>

	<div class="user-name card">
		<h2><%- user.name %></h2>
	</div>

	<div class="user-routes card">
		<div class="card-header amber">
			<h3>Routes You Climbed</h3>
		</div>

		<ul class="list-group">
			<% routes.forEach(route => { %>
				<li class="list-group-item">
					<%- route.route.name %>
					<span class="badge badge-blue pull-right"><%- route.count %></span>
				</li>
			<% }); %>				
		</ul>

	</div>

	<div class="user-achievements card">
		<div class="card-header cyan">
			<h3>Achievements</h3>		
		</div>

		<ul class="list-group">
			<% achievements.forEach(achievement => { %>
				<li class="list-group-item">
					<%- achievement.name %>
				</li>
			<% }); %>
		</ul>
	</div>

	<div class="user-comments card">
		<div class="card-header purple">
			<h3>Comments</h3>		
		</div>

		<ul class="list-group">
			<% comments.forEach(comment => { %>
			  <ul class="list-group-item">
			  	<div class="comment-header">
				  	<p class="comment-author"><%- comment.sender.name %></p>
				    <p class="comment-date">Posted at <%- comment.comment.createdAt %></p>			  		
			  	</div>
			    <p class="comment-body"><%- comment.comment.comment %> </p>
			  </ul>

			<% }); %>
			
		</ul>

		<%- include('_comment') %>
	</div>
	
</div>
