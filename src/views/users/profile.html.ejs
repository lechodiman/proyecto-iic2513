<div class="container">
	<h2 class="text-center"><%- user.name %>'s profile</h2>

	<div class="row">
	<div class="user-description">
		<div class="four">
			<h3>User's Image</h3>
			<% if (user.picture) { %>
			<img id='img' src=<%= user.picture %> />
			<% }%>
		</div>

		<% if (currentUser && currentUser.id == user.id) { %>
			<div>
			<%- include('_picture') %>
			</div>
		<% }%>

		<div class="eight">
			<h3>User's Description</h3>
			<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sequi unde tempore, asperiores expedita architecto eaque sunt at. Quod nulla, ipsa, dolores iste minus aliquid nostrum, incidunt repudiandae voluptatum aliquam nihil nesciunt fugit perferendis cupiditate minima obcaecati laudantium ducimus dolorum quibusdam illum praesentium. Expedita vitae voluptatibus, esse similique, quaerat quisquam itaque?</p>
		</div>
	</div>
	</div>


	<div id="routes">

		<h3>Routes</h3>
			<table>
			  <tr>
			    <th class="title">Route</th>
			    <th class="title">Times climbed</th>
			  </tr>

		<% routes.forEach(route => { %>
			<tr>
				<td class="routes-item"><%- route.route.name %></td>
				<td class="routes-item"><%- route.count %></td>
			</tr>
		<% }); %>
		</table>
	</div>

	<div id="trophies">

		<h3>Achievements</h3>
			<table>
			  <tr>
			    <th class="title">Name</th>
			  </tr>

		<% achievements.forEach(achievement => { %>
			<tr>
				<td><%- achievement.name %></td>
			</tr>
		<% }); %>
		</table>
	</div>

	<div id="comments">

		<h3>Comments</h3>

		<% comments.forEach(comment => { %>
		  <div class="comment">
		    <p><%- comment.comment.comment %> </p>
		    <p>Posted at <%- comment.comment.createdAt %> by <%- comment.sender.name %></p>
		  </div>

		<% }); %>

	</div>

	<%- include('_comment') %>
</div>
