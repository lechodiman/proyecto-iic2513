<h2 class="text-center">Groups</h2>

<% if (!groups.length) { %>
  <p>No results</p>
<% } else { %>


<% groups.forEach((group) => { %>
  <div class="group-container">
    <h3 class="group-name"><a href="<%- profilePath(group) %>"><%- group.name %></a></h3>
    <% if (admin) { %>
    <a class="btn btn-blue" href="<%- editgroupPath(group) %>">Edit</a>
    <form action="<%- deletegroupPath(group) %>" method="POST">
      <input type="hidden" name="_method" value="delete" />
      <input class="btn btn-red" type="submit" value="Delete" />
    </form>
    <% } %>
  </div>
<% }) %>

<% } %>

<div class="new-group">
  <a class="btn btn-blue" href="<%- submitGroupPath %>">New group</a>
</div>


